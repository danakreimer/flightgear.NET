<UserControl x:Class="FlightgearSimulator.Views.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightgearSimulator.Views"
             mc:Ignorable="d" 
             xmlns:Views="clr-namespace:FlightgearSimulator.Views"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Slider x:Name="sliderAileron" Minimum="-1" Maximum="1" SmallChange="0.1" LargeChange="0.5" Value="0" 
                    IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="0.1" Margin="35 10 10 10">
            </Slider>
            <StackPanel Orientation="Horizontal">
                <Slider x:Name="sliderThrottle" Minimum="0" Maximum="1" SmallChange="0.1" LargeChange="0.5" Value="0"
                        IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="0.1" Orientation="Vertical" Margin="10">
                </Slider>
                <Views:Joystick x:Name="Joystick"></Views:Joystick>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>
